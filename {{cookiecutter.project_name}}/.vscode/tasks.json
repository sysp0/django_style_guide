{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pip-install",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "docker-compose-up",
            "type": "shell",
            "command": "docker compose -f docker-compose.dev.yml up -d",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "makemigrations",
            "type": "shell",
            "command": "python manage.py makemigrations",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": "pip-install"
        },
        {
            "label": "migrate",
            "type": "shell",
            "command": "python manage.py migrate",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": "makemigrations"
        },
        {
            "label": "setup",
            "dependsOrder": "sequence",
            "dependsOn": [
                "pip-install",
                "docker-compose-up",
                "makemigrations",
                "migrate"
            ],
            "type": "shell",
            "command": "echo Setup tasks completed.",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}